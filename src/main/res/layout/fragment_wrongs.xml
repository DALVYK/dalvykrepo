<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/appBackground">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@color/appBackground">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_rounded_light"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/textViewWrongedPosition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="24sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/iconsColor" />

                <TextView
                    android:id="@+id/textViewWrongedQuestion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="24sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/iconsColor" />

                <TextView
                    android:id="@+id/textViewWrongedWrongAnswer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="24sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/iconsColor" />

                <TextView
                    android:id="@+id/textViewWrongedRightAnswer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="24sp" />

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <ImageButton
                    android:id="@+id/imageButtonWrongedPrevious"
                    style="@style/AppButtonsStyleLight"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center|start"
                    android:contentDescription="@string/wronged_previous"
                    app:srcCompat="@drawable/ic_keyboard_arrow_left_black_24dp" />

                <ImageButton
                    android:id="@+id/imageButtonWrongedNext"
                    style="@style/AppButtonsStyleLight"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center|end"
                    android:contentDescription="@string/wronged_next"
                    app:srcCompat="@drawable/ic_keyboard_arrow_right_black_24dp" />
            </FrameLayout>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>